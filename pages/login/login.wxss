.search .title {
  color: #8991fe;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center; 
}
.phoneNumberContainer, .passwordContainer {
  width: 90%;
  height: 80rpx;
  border: 1px solid #e0e0e0;
  border-radius: 10rpx;
  overflow: hidden;
}

.username {
  margin: 40rpx auto 0 auto;
}

.password {
  margin: 30rpx auto 0 auto;
}

.button{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 40rpx auto 0 auto;
  font-size: 36rpx;
  color: #fff;
  background-color: #8991fe;
}